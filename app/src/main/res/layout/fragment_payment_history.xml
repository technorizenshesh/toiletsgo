<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ProviderHome.Setting.PaymentHistoryFragment">

        <include
            android:layout_alignParentTop="true"
            layout="@layout/header_layout"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

-
                    <RelativeLayout
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="@dimen/_10sdp"
                            android:gravity="start"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment History"
                            android:maxLines="1"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/texts"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_weight=".7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/search_back">

                            <TextView
                                android:padding="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:drawableRight="@drawable/icon_green_received"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:paddingLeft="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" $ 100 "
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_14sdp" />

                            <RelativeLayout
                                android:padding="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/app_name"
                                    android:maxLines="1"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18 Jan 2023"
                                    android:maxLines="1"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp" />

                            </RelativeLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_weight=".7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/search_back">

                            <TextView
                                android:padding="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:drawableRight="@drawable/icon_red"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:paddingLeft="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" $ 100 "
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="@dimen/_14sdp" />

                            <RelativeLayout
                                android:padding="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_alignParentStart="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Withdraw to bank Ac"
                                    android:maxLines="1"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18 Jan 2023"
                                    android:maxLines="1"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp" />

                            </RelativeLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:outlineProvider="background"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:text="Withdraw Amount"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/gray_two"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</layout>

