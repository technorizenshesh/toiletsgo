<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.UserSide.Payment.PaymentFragment">

        <include
            android:layout_alignParentTop="true"
            layout="@layout/header_layout"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/rlPersonalDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        >
                        <ImageView
                            android:id="@+id/ivPersonal"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:src="@drawable/master_card"/>

                        <TextView
                            android:id="@+id/tvPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/ivPersonal"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="  Mastercard "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/rlPersonalDetai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        >
                        <ImageView
                            android:id="@+id/ivPersona"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:src="@drawable/ic_baseline_payment"/>

                        <TextView
                            android:id="@+id/tvPersona"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/ivPersona"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="  Cash "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:outlineProvider="background"
                    android:outlineSpotShadowColor="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:text="Payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/gray_two"
android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</layout>
