<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <include
        layout="@layout/header_layout"
        android:id="@+id/header"/>
    <ScrollView
        tools:context=".ui.UserSide.Booking.BookingDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_card"
                >

                <LinearLayout
                    android:layout_margin=".5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:visibility="visible"
                            android:src="@drawable/user">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:orientation="vertical">

                            <TextView
                                android:visibility="gone"
                                android:padding="@dimen/_5sdp"
                                android:id="@+id/tvUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Haylie Aminoff"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:padding="@dimen/_2sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:id="@+id/tvName"
                                    android:paddingLeft="5sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorSecondary"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/_12sdp"
                                    />

                                <RelativeLayout
                                    android:padding="@dimen/_2sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:id="@+id/tv_Address_"
                                        android:layout_alignParentStart="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp" />


                                </RelativeLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/accept_reject_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_margin="@dimen/_2sdp"
                                    >
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btn_reject"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:elevation="@dimen/_3sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:outlineProvider="background"
                                        android:outlineSpotShadowColor="@color/white"
                                        android:padding="@dimen/_1sdp"
                                        android:text="Decline"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold"
                                        app:backgroundTint="@color/red"
                                        app:cornerRadius="@dimen/_10sdp"
                                        app:rippleColor="@color/black" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btn_accept"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:elevation="@dimen/_3sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:outlineProvider="background"
                                        android:outlineSpotShadowColor="@color/white"
                                        android:padding="@dimen/_1sdp"
                                        android:text="Accept"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold"
                                        app:backgroundTint="@color/green"
                                        app:cornerRadius="@dimen/_10sdp"
                                        app:rippleColor="@color/gray_two" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/top"
                android:id="@+id/process_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/background_card"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">
                <TextView
                    android:id="@+id/txt_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="Booking  Qr"
                    android:textAlignment="center"
                    android:textColor="@color/texts"
                    android:textSize="@dimen/_12sdp" />
                <ImageView
                     android:id="@+id/qr_code_image"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:scaleType="fitXY"
                     />





            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
    </LinearLayout>
</layout>